{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": ["src"]
}
